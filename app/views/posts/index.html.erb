<div class="d-flex flex-column flex-md-row justify-content-between align-items-center">
  <h1>Posts</h1>

  <%= search_form_for @q do |f| %>
    <div class="form-group">
      <%= f.text_field :title_or_content_cont, placeholder: "Search title or content", class: "form-control m-3 d-inline w-auto" %>
      <%= f.submit "Search", class: "btn btn-outline-primary"%>
    </div>
  <% end %>

  <% if user_signed_in? %>
    <%= link_to "New post", new_post_path, class: "btn btn-primary btn-lg my-3" %>
  <% end %>
  </div>

<div id="posts">
  <% @posts.each do |post| %>
    <h2>
      <%= link_to post.title, post %>
    </h2>
    <p>
      <%= post.short_description %>
    </p>
    <small>
      <%= post.user.email %>
    </small>

    <p>
      
    </p>
    <hr class="my-5">
  <% end %>
  <%= will_paginate @posts %>
</div>
